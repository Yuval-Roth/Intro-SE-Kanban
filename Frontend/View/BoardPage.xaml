<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModel="clr-namespace:IntroSE.Kanban.Frontend.ViewModel" x:Class="IntroSE.Kanban.Frontend.View.BoardPage"
        mc:Ignorable="d"
        Title="BoardPage"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        MinHeight="720" MinWidth="1280"
        SizeChanged="Window_SizeChanged"
    >
    <Window.DataContext>
        <ViewModel:BoardPageViewModel/>
    </Window.DataContext>
    <Grid>
        <ListView Margin="10,10,10,65" Name="BoardTable">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="BoardId" Width="80" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="BoardName" Width="100" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Owner" Width="100" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Joined" Width="100" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="BackLog" Width="80" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="InProgress" Width="80" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Done" Width="80" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Name="ChosenBoard" TextWrapping="Wrap" Text="Chosen Board" Margin="333,374,383,21"/>
        <Label Name="ChooseYourBoard" Content="Choose your board here" HorizontalAlignment="Left" Height="30" Margin="183,374,0,0" VerticalAlignment="Top" Width="145"/>
        <Button Name="Submit" Click="Submit_Click" Content="Submit" Margin="439,380,310,36"/>

    </Grid>

</Window>

